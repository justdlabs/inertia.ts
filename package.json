{
    "version": "1.4.2",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && vite build --ssr",
        "format": "biome format --write resources/js && biome lint --fix resources/js",
        "release": "export GITHUB_TOKEN=$(cat .github_token) && release-it",
        "preview": "tsc && npm run build && php artisan inertia:start-ssr"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@inertiajs/react": "^2.0.3",
        "@release-it/bumper": "^6.0.1",
        "@release-it/conventional-changelog": "^9.0.4",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "axios": "^1.8.1",
        "laravel-vite-plugin": "^1.2.0",
        "release-it": "^17.11.0",
        "tailwindcss": "^4.0.9",
        "typescript": "^5.8.2",
        "vite-plugin-watch": "^0.3.1"
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.0.9",
        "@types/node": "^22.13.8",
        "clsx": "^2.1.1",
        "justd-icons": "^1.10.25",
        "motion": "^12.4.7",
        "react": "^19.0.0",
        "react-aria-components": "^1.6.0",
        "react-dom": "^19.0.0",
        "sonner": "^1.7.4",
        "tailwind-merge": "^3.0.2",
        "tailwind-variants": "^0.3.1",
        "tailwindcss-animate": "^1.0.7",
        "vite": "^6.2.0"
    },
    "release-it": {
        "plugins": {
            "@release-it/bumper": {
                "path": {
                    "package.json": "version",
                    "composer.json": "version"
                }
            }
        }
    }
}
